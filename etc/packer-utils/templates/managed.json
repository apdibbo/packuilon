{
  "builders": [
    {
      "type": "openstack",
      "ssh_username": "root",
      "image_name": "$NAME",
      "source_image": "$IMAGE",
      "flavor": "$FLAVOR",
      "networks": [
        "$NETWORK"
      ],
      "instance_metadata": { $METADATA
      },
      "user_data_file": "/etc/packer-utils/cloud-init.txt"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/etc/packer-utils/templates/update_ccm_managed.sh",
      "destination": "~/update_ccm_managed.sh"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "pause_after": "180s",
      "inline": [
        "sudo bash ~/update_ccm_managed.sh"
      ]
    },
    {
      "type": "file",
      "max_retries": 10,
      "source": "/etc/packer-utils/templates/managed_post_reboot.sh",
      "destination": "~/umanaged_post_reboot.sh"
    },
    {
      "type": "shell",
      "start_retry_timeout": "120s",
      "max_retries": 10,
      "inline": [
        "sudo bash ~/umanaged_post_reboot.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": [
        "source /etc/packer-utils/admin-auth.sh; rename-old-images.sh $NAME AQ"
      ]
    }
  ]
}
